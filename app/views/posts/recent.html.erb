<p id="notice"><%= notice %></p>

<h1>Recent Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post ID</th>
      <th>Content List</th>

    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>      
      <tr>
        <td><%= post.id %></td>
        <td><%= post.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', posts_path %>

