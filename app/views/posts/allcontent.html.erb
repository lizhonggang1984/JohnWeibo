<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content ID</th>
      <th>Content List</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
	<td><%= post.id %></td>
        <td><%= post.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', posts_path %>

